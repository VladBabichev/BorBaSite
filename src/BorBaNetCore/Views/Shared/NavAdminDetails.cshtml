@using BorBaNetCore
@model CurrentUser
@if (Model != null)
{
    <div class="dropdown profile-element row" >
        <div class="col-lg-4">
            <span style="vertical-align:central">
                @if (Model.HasImage)
                {
                    <img alt="image" class="img-circle" src="@Url.Action("image","employee",new { id=Model.Id})" />}
                else
                {
                    <i class="glyphicon glyphicon-user"></i>}
            </span>
        </div>
        <div class="col-lg-8">
            <a data-toggle="dropdown" class="dropdown-toggle" href="#">
                <span class="clear">
                    <span class="text-muted text-xs block">@Model.UserName<b class="caret"></b></span>
                </span>
            </a>
            <ul class="dropdown-menu animated fadeInRight m-t-xs" style="margin-top:15px;margin-right:12px;">
                <li><a asp-controller="Employee" asp-action="Index" asp-route-id="@Model.Id">Profile</a></li>
                <li><a asp-controller="Account" asp-action="Logout">Log out</a></li>
                
            </ul>
        </div>
    </div>
}